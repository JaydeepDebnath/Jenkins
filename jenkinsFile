pipeline {
    agent any 

    environment {
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {
        
        stage('Checkout App Repo') {
            steps {
                git credentialsId: 'jenkinstest', 
                    url: 'https://github.com/JaydeepDebnath/Jenkins',
                    branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                    echo 'Build Docker Image'
                    docker build -t jay0604/cicd_ec_2:${IMAGE_TAG} .
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh """
                        echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
                        docker push jay0604/cicd_ec_2:${IMAGE_TAG}
                        """
                    }
                }
            }
        }
        
        stage('Checkout K8S Manifests Repo') {
            steps {
                git credentialsId: 'jenkinstest', 
                    url: 'https://github.com/JaydeepDebnath/cicd-demo-manifests-repo.git',
                    branch: 'main'
            }
        }
        
        stage('Update K8S manifest & Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'f87a34a8-0e09-45e7-b9cf-6dc68feac670', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        sh """
                        sed -i "s/IMAGE_TAG_PLACEHOLDER/${IMAGE_TAG}/g" deploy.yaml
                        git add deploy.yaml
                        git commit -m 'Updated deploy.yaml with new image tag ${IMAGE_TAG}'
                        git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/JaydeepDebnath/cicd-demo-manifests-repo.git HEAD:main
                        """
                    }
                }
            }
        }
    }
}
